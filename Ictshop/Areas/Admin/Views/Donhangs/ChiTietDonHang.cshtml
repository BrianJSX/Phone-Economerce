@model IEnumerable<Ictshop.Models.Chitietdonhang>

@{
    ViewBag.Title = "ChiTietDonHang";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    decimal tongtien = 0;
}
<div class="admin-content-main">
    <div class="admin-content-main-header">
        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
            </ol>
        </nav>
        <button class="btn btn-primary"> << @Html.ActionLink("Quay lại đơn hàng", "Index")</button>
    </div>
    <div class="admin-content-main-body">
        <table class="table table-bordered">
            <tr>
                <th>
                    Tên Sản Phẩm
                </th>
                <th>
                    Số lượng
                </th>
                <th>
                    Đơn giá
                </th>
                <th>
                    Mã đơn hàng
                </th>
                <th>
                    Ảnh đại diện
                </th>
            </tr>

            @foreach (var item in Model)
            {
                tongtien += Convert.ToDecimal(item.Soluong) * Convert.ToDecimal(item.Dongia);

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sanpham.Tensp)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Soluong)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dongia)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Donhang.Madon)
                    </td>
                    <td>
                        <img src="~/HinhanhSP/@item.Sanpham.Anhbia" width="120px" />
                    </td>
                </tr>
            }
            <tr>
                <td>
                    <b>Tổng Tiền: @String.Format("{0:0,0}", @tongtien) VNĐ</b>
                </td>
            </tr>

        </table>
    </div>
</div>


